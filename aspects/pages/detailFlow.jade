extend detail
block header
    span(class="device Flow")
        i.fa.fa-random
    span Flow:
    code.dp
        | {{ item.id }}

block body
    div(ng-repeat="entry in item.entries")
        h1 {{ entry.deviceId }}
        div.row
            div.col-md-4
                h2 Data Link Layer
                div.table-responsive
                    table.table.table-bordered.table-condensed.table-striped
                        tbody
                            tr
                                th Source:
                                td
                                    a(href="{{ '/detail/device/' +  entry.dl.src }}")
                                        code.dp {{ entry.dl.src }}
                            tr
                                th Destination:
                                td
                                    a(href="{{ '/detail/device/' +  entry.dl.dst }}")
                                        code.dp {{ entry.dl.dst }}
                            tr
                                th Type:
                                td {{ entry.dl.type | ethernetFrameType }}
                            tr
                                th VLAN:
                                td {{ entry.dl.vlan }} / {{ entry.dl.vlanPriority }}
            div.col-md-4
                h2 Network Layer&nbsp;
                    span.label.label-success {{ entry.nw.protocol | networkProtocol }}
                div.table-responsive
                    table.table.table-bordered.table-condensed.table-striped
                        tbody
                            tr
                                th Source:
                                td {{ entry.nw.src }}
                            tr
                                th Destination:
                                td {{ entry.nw.dst }}
                            tr
                                th Type of Service:
                                td {{ entry.nw.typeOfService }}
            div.col-md-4.sdn-flow
                h2 Transport Layer&nbsp;
                    span.label.label-default(ng-show="entry.nw.protocol == 6 || entry.nw.protocol == 17") {{ min(entry.tp.src, entry.tp.dst) | serviceName:item.protocol }}
                div.table-responsive
                    table.table.table-bordered.table-condensed.table-striped
                        tbody
                            tr
                                th Source:
                                td {{ entry.tp.src }}
                            tr
                                th Destination:
                                td {{ entry.tp.dst }}
        div
            div(ng-repeat="action in entry.actions") {{ action }}

        hr