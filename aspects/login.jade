extends layout
block nav

block body
	div.row
		div.col-md-4.col-md-offset-4
			div.panel.panel-default
				div.panel-heading
					i.fa.fa-lock
					|  Login
				div.panel-body
					form.form-horizontal(action="/login", method="post")
						div.form-group
							label.col-lg-4.control-label Username:
							div.col-lg-8
								input.form-control(type="text",name="username")
						div.form-group
							label.col-lg-4.control-label Password:
							div.col-lg-8
								input.form-control(type="password",name="password")
						div.form-group
							div.col-lg-offset-4.col-lg-8
								button.btn.btn-primary() Log In

block scripts