        link(rel="stylesheet", href="/css/app.css")
    body
        a(class="sr-only",href="#content")
            Skip navigation
        header#sdn-nav.navbar.navbar-inverse.navbar-fixed-top(role="banner")
            div.container-fluid
                div.navbar-header
                    a.navbar-brand.navbar-brand-img(href="/")
                    a.navbar-brand.hidden-sm(href="/") SDN-Viz
                div(class="navbar-collapse collapse")
                    block nav

