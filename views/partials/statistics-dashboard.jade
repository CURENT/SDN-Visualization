div
	div.row
		div.col-md-8
			div.panel.panel-default
				div.panel-heading
					h2 Devices 
						span.badge {{ data.ofvm.devices.length }} 
				div.panel-body
					div.row
						div.col-xs-6.col-sm-4.col-md-4.col-lg-3(ng-repeat="device in data.ofvm.devices | hasIdOrName:deviceFilter | orderBy:'name' ")
							span(of-device-thumbnail,device="device")
		div.col-md-4
			div.panel.panel-default
				div.panel-heading
					h2 Flows 
						span.badge {{ data.ofvm.flows.length }} 
				div.panel-body
					div.row
						div.col-xs-12(ng-repeat="flow in data.ofvm.flows")
							span(of-flow-thumbnail,flow="flow")